{% extends 'base_admin.html.twig' %}

{% block title %}Liste des arcticles enregistrer {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Liste de vos articles</h2>
    <table class="table" border="1">
        <thead>
            <th>titres</th>
            <th>contenus</th>
            <th>images</th>
            <th>Date de creation</th>
            <th>Status</th>
            <th>options</th>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenu|nl2br }}</td>
                    <td>
                        <img src="{{asset('assets/files/'~article.image)}}" alt="" style="height:100px; width:100px;" />
                    </td>
                    <td>{{ article.createAt |date("d/m/Y") }}</td>
                    <td>{{ article.statut }}</td>
                    <td>
                        <a href="" class="btn btn-primary"><span class="fa fa-ban"  style="color:white;"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
