{% extends 'base_admin.html.twig' %}

{% block title %} Liste des contact {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h2>Liste des contacts ({{contacts|length}}) <span class="fa fa-phone" style="font-size: 1em; ;"></span></h2> <br>
    <table border="1" class="table">
      <thead>
        <th>Noms</th>
        <th>Phones</th>
        <th>Emails</th>
        <th>Messages</th>
        <th>Date contact</th>
      </thead>
      <tbody>
        {% for contact in contacts %}
            <tr>
                <td>
                    {{contact.prenom}}
                </td>
                <td>{{contact.phone}}</td>
                <td>{{contact.email}}</td>
                <td>{{contact.message}}</td>
                <td>{{contact.createAt |date("d/m/Y")}}</td>
            </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
{% endblock %}
