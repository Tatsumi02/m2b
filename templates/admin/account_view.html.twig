{% extends 'base_admin.html.twig' %}

{% block title %}Information de compte{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br><br><br><br><br><br><br><br>
   <h2>Les informations de compte <span class="fa fa-user" style="font-size: 1em;"></span>
    <a href="{{path('app_update_user_form')}}" class="btn btn-primary">modifier les informations</a>
   </h2>
    <table class="table" border="1">
        <thead>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Role</th>
            <th>Date de creation</th>
        </thead>
            <tr>
                <td>{{app.user.nom}}</td>
                <td>{{app.user.prenom}}</td>
                <td>{{app.user.email}}</td>
                <td>{{app.user.roles[0]}}</td>
                <td>{{app.user.createAt|date("d/m/Y")}}</td>
            </tr>
        <tbody>

        </tbody>
    </table>
    <br><br><br><br><br><br><br><br>
</div>
{% endblock %}
