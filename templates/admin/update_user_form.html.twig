{% extends 'base_admin.html.twig' %}

{% block title %}Formulaire de modifiacation des infos utilisateur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br><br><br><br>
    <h2>Modifiez les informations de compte</h2> <br>
    <form action="{{path('updating_data_user')}}" method="post">
        <input type="text" name="nom" value="{{app.user.nom}}" id="" /><br><br>
        <input type="text" name="prenom" value="{{app.user.prenom}}" id=""><br><br>
        <input type="text" name="email" value="{{app.user.email}}" id=""> <br><br>

        <button type="submit" class="cmn-btn"> Modifier </button>
    </form>
    <br><br><br><br>
</div>
{% endblock %}
