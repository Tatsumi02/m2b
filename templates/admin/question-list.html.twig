{% extends 'base_admin.html.twig' %}

{% block title %}Liste des questions poser{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br><br>
    <h2>Liste des questions ({{questions|length}}) <span class="fa fa-question" style="font-size: 1em;"></span></h2> <br>
    <table class="table" border="1">
        <thead>
            <th>Questions</th>
            <th>Reponses</th>
            <th>Statuts</th>
            <th>Contact</th>
            <th>Option</th>
        </thead>
            {% for q in questions %}
                <tr>
                    <td>{{q.question}}</td>
                    <td>{{q.reponse}}</td>
                    <td>{{q.statut}}</td>
                    <td>{{q.contact}}</td>
                    <td>
                        {% if q.statut == 'sans reponse' %}
                            <a href="{{path('reponse_q',{'id':q.id})}}" class="btn btn-primary">Repondre</a>
                        {% endif %}
                        
                    </td>
                </tr>
            {% endfor %}
        <tbody>

        </tbody>
    </table>
    <br><br>
</div>
{% endblock %}
